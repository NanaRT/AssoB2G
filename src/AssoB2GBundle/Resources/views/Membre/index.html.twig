{% extends 'base.html.twig' %}

{%block head%}
	<link rel="stylesheet" href="{{ asset('bundles/assob2g/css/3-col-portfolio.css')  }}" />
{%endblock%}

{% block body %}

    <!-- Page Content -->
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                	Les membres de l'AB2G
                </h1>
            </div>
        </div>
		
		{%for membre in entities%}
	        <div class="col-md-4 portfolio-item">
	            <img class="img-responsive" src="{{ asset('bundles/assob2g/image/Membre/'~membre.prenom~'_'~membre.nom~'.jpg') }}" alt="{{membre.prenom}} {{membre.nom}}">
	            <h4>
	                {{membre.prenom}} {{membre.nom}} 
	                {%if membre.poste%}
	                	- {{membre.poste}}
	                {%endif%}
	            </h4>
	        </div>
	    {%endfor%}

        <hr>

{%endblock%}
